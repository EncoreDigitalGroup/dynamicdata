{
    "name": "encoredigitalgroup/package-skeleton",
    "type": "library",
    "description": "Package Skeleton",
    "keywords": [
        "Encore Digital Group"
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.encoredigitalgroup.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "brainmaestro/composer-git-hooks": "^3.0@alpha",
        "encoredigitalgroup/common": "^0.11.1 || ^0.12.0",
        "laravel/framework": "^10.0",
        "spatie/laravel-package-tools": "^1.14"
    },
    "require-dev": {
        "tightenco/duster": "^2.6",
        "neronmoon/scriptsdev": "0.1.9"
    },
    "autoload": {
        "psr-4": {
            "EncoreDigitalGroup\\PackageName\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EncoreDigitalGroup\\PackageName\\Tests\\": "tests/"
        }
    },
    "scripts": {
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "vendor/bin/duster fix"
            ],
            "post-update": [
                "vendor/bin/duster fix"
            ]
        },
        "laravel": {
            "dont-discover": [],
            "providers": [
                "EncoreDigitalGroup\\PackageName\\ServiceProvider"
            ]
        },
        "scripts-dev": {
            "cghooks": "vendor/bin/cghooks",
            "format": "vendor/bin/duster fix",
            "post-update-cmd": [
                "@format"
            ],
            "post-autoload-dump": [
                "@cghooks update"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "neronmoon/scriptsdev": true
        }
    }
}
